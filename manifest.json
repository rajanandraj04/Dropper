{
    "name": "Dropper",
    "description": "A color picker extension, which help you to pick color from the screen and shows color and hex code of selected color.",
    "version": "1.0.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "activeTab",
        "scripting"
    ],
   
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "/images/picker_16.png",
        "32": "/images/picker_32.png",
        "48": "/images/picker_48.png"
    }
}